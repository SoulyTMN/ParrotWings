@section scripts{
    <script src="~/Scripts/angular/transactions.js"></script>
}

<div class="md-whiteframe-6dp">
    <md-toolbar class="md-theme-light">
        <h2 class="md-toolbar-tools">Create transaction</h2>
    </md-toolbar>
    <md-content flex>
        <div ng-controller="TransactionCommitController">
            <md-content layout-padding>
                <form name="TransactionCommit" ng-submit="submit()">
                    <p>
                        <div ng-controller="aucCtrl as ctrl" class="block">
                            <md-content>
                                <md-input-container class="md-block">
                                    <label>Recipient</label>
                                    <md-autocomplete md-selected-item="ctrl.selectedItem"
                                                     md-search-text-change="ctrl.searchTextChange(ctrl.searchText)"
                                                     md-search-text="ctrl.searchText"
                                                     md-selected-item-change="ctrl.selectedItemChange(item)"
                                                     md-items="item in ctrl.querySearch(ctrl.searchText)"
                                                     md-item-text="item.display"
                                                     md-min-length="0"
                                                     placeholder="Enter transaction recipient"
                                                     required
                                                     ng-model="RecipientId">
                                        <md-item-template>
                                            <span md-highlight-text="ctrl.searchText" md-highlight-flags="^i">{{item.display}}</span>
                                        </md-item-template>
                                        <md-not-found>
                                            No users matching "{{ctrl.searchText}}" were found.
                                        </md-not-found>
                                    </md-autocomplete>
                                </md-input-container>
                            </md-content>
                        </div>
                    </p>
                    <p>
                        <md-input-container class="md-block">
                            <label>Amount:</label>
                            <input required type="number" min="1" ng-model="Amount" value="amount">
                        </md-input-container>
                    </p>
                    <p><md-button type="submit" class="md-raised">Submit transaction</md-button></p>
                </form>
            </md-content>
        </div>
    </md-content>
    <div layout="column">
        <md-toolbar class="md-theme-light">
            <h2 class="md-toolbar-tools">Transaction history</h2>
        </md-toolbar>
        <md-content flex>
            <div class="container">
                <br>
                <p>
                    <input type="text" placeholder="Search Transaction" ng-model="searchTransaction" />
                </p>

                <div ng-controller="TransactionsController" id="myTransactionsDiv" style="max-height:350px;">
                    <table class="table">
                        <tr>
                            <th>
                                <a href="#" ng-click="sortType = 'Date'; sortReverse = !sortReverse">Date/Time of the transaction</a>
                                <span ng-show="sortType == 'Date' && !sortReverse" class="fade fa-caret-down"></span>
                                <span ng-show="sortType == 'Date' && sortReverse" class="fade fa-caret-up"></span>
                            </th>
                            <th>
                                <a href="#" ng-click="sortType = 'CorrespondentName'; sortReverse = !sortReverse">Correspondent Name</a>
                                <span ng-show="sortType == 'CorrespondentName' && !sortReverse" class="fade fa-caret-down"></span>
                                <span ng-show="sortType == 'CorrespondentName' && sortReverse" class="fade fa-caret-up"></span>
                            </th>
                            <th>
                                <a href="#" ng-click="sortType = 'Amount'; sortReverse = !sortReverse">Transaction amount</a>
                                <span ng-show="sortType == 'Amount' && !sortReverse" class="fade fa-caret-down"></span>
                                <span ng-show="sortType == 'Amount' && sortReverse" class="fade fa-caret-up"></span>
                            </th>
                            <th>Resulting balance</th>
                            <th></th>
                        </tr>
                        <tr ng-repeat="r in transactions | filter : searchTransaction  | orderBy:sortType:sortReverse ">
                            <td>{{r.Date | date:'yyyy-MM-dd HH:mm:ss'}}</td>
                            <td>{{r.CorrespondentName}}</td>
                            <td>
                                <span ng-show="r.TransactionType == 1" style="color:yellowgreen">Credit: {{r.Amount}} PW</span>
                                <span ng-show="r.TransactionType != 1" style="color:red">Debit: {{r.Amount}} PW</span>
                            </td>
                            <td>{{r.MyResultingBalance}}</td>
                            <td><a href="#" ng-click="copyTransaction(r.CorrespondentId, r.CorrespondentName, r.Amount)" ng-show="r.TransactionType != 1">Copy transaction</a></td>
                        </tr>
                    </table>
                </div>
            </div>
        </md-content>
    </div>
</div> 